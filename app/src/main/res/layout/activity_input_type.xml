<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".NewMeeting.InputTypeActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="50dp"
            android:layout_height="28dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="35dp"
            android:scaleType="fitStart"
            app:srcCompat="@drawable/back_btn_iocn" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="모임의 성격을 알려주세요"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="45dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/checkbox_study"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@drawable/round_checkbox"
            android:padding="4dp">

            <ImageButton
                android:id="@+id/activity_new_meeting_imgbtn_study"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:adjustViewBounds="true"
                android:background="#ffffff"
                android:scaleType="centerInside"
                android:src="@drawable/study_icon" />

            <CheckBox
                android:id="@+id/activity_new_meeting_cb_study"

                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:button="@null"
                android:text="Study"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/checkbox_talk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@drawable/round_checkbox"
            android:padding="4dp">

            <ImageButton
                android:id="@+id/activity_new_meeting_imgbtn_talk"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:adjustViewBounds="true"
                android:background="#ffffff"
                android:scaleType="centerInside"
                android:src="@drawable/talk_icon" />

            <CheckBox
                android:id="@+id/activity_new_meeting_cb_talk"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:button="@null"
                android:text="Talk"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/checkbox_eat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@drawable/round_checkbox"
            android:padding="4dp">

            <ImageButton
                android:id="@+id/activity_new_meeting_imgbtn_eat"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:adjustViewBounds="true"
                android:background="#ffffff"
                android:scaleType="centerInside"
                android:src="@drawable/eat_icon" />

            <CheckBox
                android:id="@+id/activity_new_meeting_cb_eat"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:button="@null"
                android:text="Eat"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/checkbox_drink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@drawable/round_checkbox"
            android:padding="4dp">

            <ImageButton
                android:id="@+id/activity_new_meeting_imgbtn_drink"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:adjustViewBounds="true"
                android:background="#ffffff"
                android:scaleType="centerInside"
                android:src="@drawable/drink_icon" />

            <CheckBox
                android:id="@+id/activity_new_meeting_cb_drink"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:button="@null"
                android:text="Drink"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/checkbox_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_checkbox"
            android:padding="4dp">

            <ImageButton
                android:id="@+id/activity_new_meeting_imgbtn_activity"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:adjustViewBounds="true"
                android:background="#ffffff"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/activity_icon" />

            <CheckBox
                android:id="@+id/activity_new_meeting_cb_activity"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:button="@null"
                android:text="Activity"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="45dp">

        <Button
            android:id="@+id/activity_new_meeting_btn_make"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#0741AD"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="모임 만들기!"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold" />
    </FrameLayout>
</LinearLayout>
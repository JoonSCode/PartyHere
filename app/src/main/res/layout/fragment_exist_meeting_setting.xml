<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".NewMeeting.InputTypeActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/back_btn_iocn" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Information"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </FrameLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/under_line_black"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="모임 이름"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp">

            <EditText
                android:id="@+id/fragment_exist_meeting_setting_et_meeting_title"
                style="@style/Widget.AppCompat.EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:ems="10"
                android:inputType="textShortMessage"
                android:text="Name" />
        </FrameLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="모임 목적"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="45dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/fragment_exist_meeting_setting_checkbox_study"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="@drawable/round_checkbox"
                android:padding="4dp">

                <ImageButton
                    android:id="@+id/fragment_exist_meeting_setting_imgbtn_study"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:adjustViewBounds="true"
                    android:background="#ffffff"
                    android:scaleType="centerInside"
                    android:src="@drawable/study_icon" />

                <CheckBox
                    android:id="@+id/fragment_exist_meeting_setting_cb_study"

                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:button="@null"
                    android:text="Study"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_exist_meeting_setting_checkbox_talk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="@drawable/round_checkbox"
                android:padding="4dp">

                <ImageButton
                    android:id="@+id/fragment_exist_meeting_setting_imgbtn_talk"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:adjustViewBounds="true"
                    android:background="#ffffff"
                    android:scaleType="centerInside"
                    android:src="@drawable/talk_icon" />

                <CheckBox
                    android:id="@+id/fragment_exist_meeting_setting_cb_talk"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:button="@null"
                    android:text="Talk"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_exist_meeting_setting_checkbox_eat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="@drawable/round_checkbox"
                android:padding="4dp">

                <ImageButton
                    android:id="@+id/fragment_exist_meeting_setting_imgbtn_eat"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:adjustViewBounds="true"
                    android:background="#ffffff"
                    android:scaleType="centerInside"
                    android:src="@drawable/eat_icon" />

                <CheckBox
                    android:id="@+id/fragment_exist_meeting_setting_cb_eat"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:button="@null"
                    android:text="Eat"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_exist_meeting_setting_checkbox_drink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="@drawable/round_checkbox"
                android:padding="4dp">

                <ImageButton
                    android:id="@+id/fragment_exist_meeting_setting_imgbtn_drink"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:adjustViewBounds="true"
                    android:background="#ffffff"
                    android:scaleType="centerInside"
                    android:src="@drawable/drink_icon" />

                <CheckBox
                    android:id="@+id/fragment_exist_meeting_setting_cb_drink"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:text="Drink"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_exist_meeting_setting_checkbox_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_checkbox"
                android:padding="4dp">

                <ImageButton
                    android:id="@+id/fragment_exist_meeting_setting_imgbtn_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:adjustViewBounds="true"
                    android:background="#ffffff"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/activity_icon" />

                <CheckBox
                    android:id="@+id/fragment_exist_meeting_setting_cb_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:text="Activity"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/fragment_exist_meeting_setting_btn_renewal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_weight="1"

                android:background="#00a8f3"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="정보 갱신"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/fragment_exist_meeting_setting_btn_leave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:background="#E91E63"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="모임 나가기"
                android:textColor="#FFFFFF"
                android:textSize="22sp" />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>